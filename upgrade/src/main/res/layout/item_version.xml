<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iv_tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/gray_9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="v1.2.5" />

        <TextView
            android:id="@+id/iv_tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_goneMarginTop="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_tv_upgrade"
            app:layout_constraintStart_toStartOf="@+id/iv_tv_version"
            app:layout_constraintTop_toBottomOf="@+id/iv_tv_upgrade"
            app:layout_goneMarginEnd="16dp"
            tools:text="修复bug修复，修复bug修复，修复bug修复，修复bug修复" />

        <TextView
            android:id="@+id/iv_tv_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/update"
            android:textColor="@color/white"
            android:background="@drawable/ripple_shape_theme_r4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_tv_version"
            tools:text="更新" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>